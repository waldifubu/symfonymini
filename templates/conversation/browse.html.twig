{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if app.user %}
            <div class="d-block">
                <div class="connected-user float-end">
                    <p>Logged in as user : {{ app.user.getUsername }} <a class="btn btn-danger"
                                                                         href="{{ path("app_logout") }}">Logout</a></p>
                </div>
            </div>
        {% endif %}
        <h2>List of conversations :</h2>
        <div class="messages-list col-12">
            <div class="container my-3">
                <a class="btn btn-primary" href="{{ path("conversation_add") }}">Create a conversation</a>
                <a class="btn btn-success" href="https://jwt.io/?token={{ jwt }}" target="_blank">Check your JWT via
                    jwt.io </a>
            </div>

            <div class="container">
                <ul class="list-group">
                    {% for key, conversation in conversations %}
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="col-6">
                                <a href="{{ path("messages_browse", {'groupConversation' : conversation.id}) }}">[{{ conversation.id }}
                                    ] - {{ conversation.name }}</a>
                            </div>
                            <div class="col-2">
                                <span class="badge bg-primary rounded-pill">Messages : {{ conversation.messages|length }}</span>
                            </div>
                            <div class="col-2">
                                <span class="badge bg-info rounded-pill">Attendees : {{ conversation.users|length }}</span>
                            </div>
                            <div class="col-2">
                                <span class="badge {{ conversation.private ? 'bg-danger' : 'bg-success' }} rounded-pill"> {{ conversation.private ? 'private' : 'public' }}</span>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type='application/javascript'></script>
{% endblock %}
